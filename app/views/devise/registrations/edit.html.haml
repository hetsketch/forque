.row
  .col.m6.offset-m3
    %h4 Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.input :email
      = f.input :username
      = f.input :first_name
      = f.input :last_name
      = f.input :position
      = f.input :city
      = f.input :bio, as: :text
      = f.input :password
      = f.input :avatar, as: :file, input_html: { data_target: 'crop-photo'}
      #crop-photo.modal
        .modal-content
          = f.cropbox :avatar if current_user.avatar.present?
        .modal-footer
          %a.modal-action.modal-close.waves-effect.waves-green.btn-flat{:href => "#!"} Agree
      = f.input :password_confirmation
      = f.input :current_password
      = f.submit "Update", class: 'btn btn-large full-width'
