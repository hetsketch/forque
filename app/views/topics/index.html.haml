.row
  .col-md-8
    = link_to 'Create topic', new_topic_path, class: 'btn btn-success btn-sm'
.row
  .col-md-8
    %ul.list-group
      - @topics.each do |topic|
        %li.list-group-item
          = link_to topic.title, topic_path(topic)
          = link_to 'Edit', edit_topic_path(topic), class: 'pull-right'
          = link_to 'Delete', topic_path(topic), method: 'delete', class: 'pull-right'