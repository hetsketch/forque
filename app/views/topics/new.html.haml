.row
  .col.m8
    %h4 Create topic
    = simple_form_for @topic do |f|
      = f.input :title, input_html: { data: { length: Topic.validators_on(:title)[1].options[:maximum] } }
      = f.input :text, as: :text, input_html: { data: { length: Topic.validators_on(:text)[1].options[:maximum] } }
      = f.button :submit